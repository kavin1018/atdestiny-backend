// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum UserRole {
  ADMIN
  USER
}

enum BookingStatus {
  PENDING
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentGateway {
  STRIPE
  RAZORPAY
  MANUAL
}

enum ServiceCategory {
  WEDDING_PHOTOGRAPHY
  WEDDING_VIDEOGRAPHY
  EVENT_PHOTOGRAPHY
  EVENT_VIDEOGRAPHY
  YOUTUBE_CONTENT
  REELS_SHORTS
  MODEL_PHOTOSHOOT
  PRODUCT_PHOTOSHOOT
}

enum MediaType {
  IMAGE
  VIDEO
}

enum InquiryStatus {
  NEW
  IN_PROGRESS
  RESOLVED
  CLOSED
}

// ==================== MODELS ====================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  role          UserRole  @default(USER)
  phone         String?   @unique
  name          String
  isVerified    Boolean   @default(false)
  isActive      Boolean   @default(true)
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  
  // Relations
  admin         Admin?
  bookings      Booking[]
  inquiries     Inquiry[]
  refreshTokens RefreshToken[]
  
  @@index([email])
  @@index([phone])
  @@map("users")
}

model Admin {
  id          String   @id @default(uuid())
  userId      String   @unique
  permissions Json?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("admins")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  isRevoked Boolean  @default(false)
  
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([userId])
  @@map("refresh_tokens")
}

model Service {
  id          String          @id @default(uuid())
  name        String
  category    ServiceCategory
  description String          @db.Text
  basePrice   Decimal         @db.Decimal(10, 2)
  isActive    Boolean         @default(true)
  
  // SEO & Marketing
  slug        String          @unique
  metaTitle   String?
  metaDesc    String?
  
  // Timestamps
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  
  // Relations
  packages    ServicePackage[]
  bookings    Booking[]
  portfolios  Portfolio[]
  
  @@index([category])
  @@index([slug])
  @@map("services")
}

model ServicePackage {
  id          String   @id @default(uuid())
  serviceId   String
  name        String
  description String   @db.Text
  price       Decimal  @db.Decimal(10, 2)
  features    Json
  duration    Int?
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  service     Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  bookings    Booking[]
  
  @@index([serviceId])
  @@map("service_packages")
}

model Booking {
  id            String        @id @default(uuid())
  userId        String
  serviceId     String
  packageId     String?
  
  // Booking Details
  bookingDate   DateTime
  bookingTime   String
  location      String?
  notes         String?       @db.Text
  
  // Pricing
  totalAmount   Decimal       @db.Decimal(10, 2)
  advanceAmount Decimal?      @db.Decimal(10, 2)
  
  // Status
  status        BookingStatus @default(PENDING)
  
  // Admin Notes
  adminNotes    String?       @db.Text
  
  // Timestamps
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  confirmedAt   DateTime?
  completedAt   DateTime?
  cancelledAt   DateTime?
  
  // Relations
  user          User          @relation(fields: [userId], references: [id])
  service       Service       @relation(fields: [serviceId], references: [id])
  package       ServicePackage? @relation(fields: [packageId], references: [id])
  payments      Payment[]
  
  @@index([userId])
  @@index([serviceId])
  @@index([status])
  @@index([bookingDate])
  @@map("bookings")
}

model Payment {
  id              String         @id @default(uuid())
  bookingId       String
  amount          Decimal        @db.Decimal(10, 2)
  status          PaymentStatus  @default(PENDING)
  gateway         PaymentGateway
  
  // Gateway Details
  transactionId   String?        @unique
  gatewayResponse Json?
  
  // Metadata
  paymentMethod   String?
  currency        String         @default("INR")
  
  // Timestamps
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  completedAt     DateTime?
  
  // Relations
  booking         Booking        @relation(fields: [bookingId], references: [id])
  
  @@index([bookingId])
  @@index([transactionId])
  @@index([status])
  @@map("payments")
}

model Portfolio {
  id          String   @id @default(uuid())
  serviceId   String?
  title       String
  description String?  @db.Text
  coverImage  String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  service     Service? @relation(fields: [serviceId], references: [id], onDelete: SetNull)
  media       Media[]
  
  @@index([serviceId])
  @@index([order])
  @@map("portfolios")
}

model Media {
  id           String    @id @default(uuid())
  portfolioId  String
  url          String
  thumbnailUrl String?
  type         MediaType
  
  // Metadata
  fileName     String
  fileSize     Int
  mimeType     String
  width        Int?
  height       Int?
  duration     Int?
  
  // Organization
  order        Int       @default(0)
  caption      String?
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  portfolio    Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  @@index([portfolioId])
  @@index([type])
  @@map("media")
}

model Inquiry {
  id        String        @id @default(uuid())
  userId    String?
  name      String
  email     String
  phone     String?
  message   String        @db.Text
  status    InquiryStatus @default(NEW)
  
  // Admin Response
  response  String?       @db.Text
  
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  
  user      User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([status])
  @@index([createdAt])
  @@map("inquiries")
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  entity    String
  entityId  String?
  changes   Json?
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([entity])
  @@index([createdAt])
  @@map("audit_logs")
}
