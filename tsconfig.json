{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@/modules/*": [
                "./modules/*"
            ],
            "@/shared/*": [
                "./shared/*"
            ],
            "@/database/*": [
                "./database/*"
            ]
        },
        "lib": [
            "ES2022"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "strict": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}